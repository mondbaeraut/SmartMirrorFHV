extends layout

block content
  div(id="clockdate")
    dig(id="weather")
      script(src='/javascript/jquery.simpleWeather.js')
      script(src='/javascript/weather.js')
    div(id="dgDate")
      div(id="dgDateText")
    div(id="dgClock")
      div(id="dgClockHourText")
      div(id="dgClockMinuteText")
      div(id="dgClockSecondText")
    script(src='/javascript/digitalclock.js')
  div(id="right")
    if(useDiagram)
      div(id="chart")
        script(src='https://code.highcharts.com/highcharts.js')
        script(src='/javascript/chart.js')
    else
      div(id="overlay")
      img(src="/resources/emptyTree.svg", id="tree")
      script(src='/javascript/tree.js')
      div(id="stepSign")
        div(id="steps")
  script(src='/javascript/ReconnectingEventSource.min.js')
  script(src='/javascript/miband.js')
